<div class="container container-control" id="<%=collection.id %>">
    <div class="panel panel-default">    
            <div class="media-heading user-name">
                <%
                    user = User.find_by_name(collection.writer_name)
                %>
                <%= link_to improved_gravatar_for(user), profile_path(:name=>collection.writer_name) %>
                <%= link_to collection.writer_name, profile_path(:name=>collection.writer_name) %>
            </div>

            <div class="media-body episode-script-content" style="padding-top:15px">
                <%= collection.script %>
            </div>
    
            <div class="media-body episode-image-content">
                <%= image_tag collection.image_url %>
            </div>

            <div class="media-body episode-post-time" style="padding-bottom:20px">
                <% 
                   tmp_time = collection.time
                   res = tmp_time.to_s.split()
                   res = res[0..(res.length-2)]
                   created_at_time = res.join(" ")
                %>
                <%= created_at_time %>
            </div>                
    </div>
</div>

<div id="<%=collection.id%>-delete" style="padding-left:620px">
    <%=button_to "Delete", profiles_delete_collection_path(:id=>collection.id), :class=>'btn btn-large btn-primary', :remote=>true %>
</div>