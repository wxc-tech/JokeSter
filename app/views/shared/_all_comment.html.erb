<div class="row" id="<%= all_comment.id %>">
  <div class="col-md-12">
      <div class="row">
      <div class="col-md-6 up-line">
        <%= link_to improved_gravatar_for(all_comment), profile_path(:name=>all_comment.name) %>
        <%= link_to all_comment.name, profile_path(:name=>all_comment.name) %>
      </div>
      </div>

      <div class="row">
      <div class="col-md-12 member-distance">
	      <%= all_comment.content %>
      </div>
      </div>

      <div class="row">
      <div class="col-md-4 col-md-offset-8 member-distance">
        <div class="pull-right">
         <% 
           tmp_time = all_comment.created_at
           res = tmp_time.to_s.split()
           res = res[0..(res.length-2)]
           created_at_time = res.join(" ")
         %>
         <%= created_at_time %>
        </div>
      </div>
      </div>
  </div>
</div>
<li class="remove-li-dot"><hr></li>